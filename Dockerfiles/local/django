FROM python:3.6

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        postgresql-client \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /usr/src/app
COPY ./requirements /requirements
RUN pip install -r /requirements/local.txt

COPY ./Dockerfiles/local/start /start
RUN sed -i 's/\r//' /start
RUN chmod +x /start
